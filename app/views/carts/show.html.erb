<h1>カートの中身</h1>

<% if @cart.cart_items.any? %>
  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>数量</th>
        <th>単価</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cart.cart_items.each do |item| %>
        <tr>
          <td><%= item.product.name %></td>
          <td><%= item.quantity %></td>
          <td><%= number_to_currency(item.unit_price, unit: '¥') %></td>
          <td><%= number_to_currency(item.subtotal, unit: '¥') %></td>
          <td><%= button_to '削除', cart_item_path(item), method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <p><strong>合計金額：</strong><%= number_to_currency(@cart.total, unit: '¥') %></p>
<% else %>
  <p>カートは空です。</p>
<% end %>

<%= link_to '商品一覧に戻る', products_path %>
